<%- model_class = Square -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:x) %>:</strong></dt>
  <dd><%= @square.x %></dd>
  <dt><strong><%= model_class.human_attribute_name(:y) %>:</strong></dt>
  <dd><%= @square.y %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pool_id) %>:</strong></dt>
  <dd><%= @square.pool_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              squares_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_square_path(@square), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              square_path(@square),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
